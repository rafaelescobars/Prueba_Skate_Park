{{!-- loginForm --}}
<div class="container" id="main-form">
  <form action="/login" method="post">
    <div class="form-group">
      <div class="form-group">
        <label>Email</label>
        <input class="form-control w-50 m-auto" type="email" name="email" required/>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input class="form-control w-50 m-auto" type="password" name="password" required/>
      </div>
    </div>
    <button class="btn btn-success my-3">Ingresar</button>
    <p>¿Aún no tienes cuenta? <a href="/register">Regístrate</a></p>
  </form>
</div>

