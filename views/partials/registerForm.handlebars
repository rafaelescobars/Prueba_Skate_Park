<div class="container">
  <form enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" id="email" name="email" type="email" required>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" id="nombre" name="nombre" type="text" required>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input class="form-control m-auto" id="password" name="password" type="password" required>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input class="form-control m-auto" id="password2" name="password2" type="password" required>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input class="form-control m-auto" id="añosExperiencia" name="añosExperiencia" type="number" required>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" id="especialidad" name="especialidad" type="text" required>
      </div>
      <div class="form-group col-12 col-sm-12 my-3 d-flex justify-content-center">
        <div class="row row-cols-2">
          <div class="col-5 text-end">
            <label class="">Foto de perfil</label>
          </div>
          <div class="col-6">
            <input type="file" id="foto" name="foto" required>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button class="btn btn-info mb-3" onclick="postContender(event)">Registrarme</button>
    </div>
  </form>
</div>